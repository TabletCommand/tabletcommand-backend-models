{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "../definitions",
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "outDir": "../build",
    "paths": {
      "*": [
        "../node_modules/@types/*",
        "*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "node",
      "mocha"
    ]
  }
}