{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "../definitions",
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "../build",
    "typeRoots": ["./types", "node_modules/@types"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    // "noUnusedLocals": true,
  },
}
